<script>
  function validateForm() {
    // Validate BTC Address
    var btcAddress = document.forms["transferForm"]["btcAddress"].value;
    // Validate Amount (allow only numbers)
    var amount = document.forms["transferForm"]["amount"].value;

    // Check if both BTC address and amount are empty
    if (btcAddress === "" && amount === "") {
      alert("BTC Address and Amount must be filled out");
      return false;
    }

    // Check if either BTC address or amount is empty
    if (btcAddress === "" || amount === "") {
      alert("BTC Address and Amount cannot be empty");
      return false;
    }

    // Validate BTC Address
    if (btcAddress === "") {
      alert("BTC Address must be filled out");
      return false;
    }

    // Validate Amount (allow only numbers)
    if (amount === "" || isNaN(amount)) {
      alert("Amount must be a valid number");
      return false;
    }

    // Additional validation logic can be added as needed

    // If all validations pass, you can submit the form
    return true;
  }
</script>